issn = {0270-6474},
journal = {The Journal of Neuroscience},
keywords = {Narasimhan2017},
month = {nov},
number = {47},
pages = {11406--11423},
title = {{Pathological Tau Strains from Human Brains Recapitulate the Diversity of Tauopathies in Nontransgenic Mouse Brain}},
