number = {9},
pages = {1229--1236},
title = {{Diffusion tensor imaging of the nigrostriatal fibers in Parkinson's disease.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/25920732},
volume = {30},
year = {2015}
}
