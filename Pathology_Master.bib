doi = {10.1093/brain/awq075},
issn = {1460-2156},
journal = {Brain},
keywords = {Aged,Alzheimer Disease,Alzheimer Disease: diagnosis,Alzheimer Disease: physiopathology,Alzheimer Disease: psychology,Behavior,Female,Frontotemporal Dementia,Frontotemporal Dementia: diagnosis,Frontotemporal Dementia: physiopathology,Frontotemporal Dementia: psychology,Gyrus Cinguli,Gyrus Cinguli: physiopathology,Hippocampus,Hippocampus: physiopathology,Humans,Magnetic Resonance Imaging,Male,Middle Aged,Nerve Net,Nerve Net: physiopathology,Occipital Lobe,Occipital Lobe: physiopathology,Parietal Lobe,Parietal Lobe: physiopathology,Raphe Nuclei,Raphe Nuclei: physiopathology,Severity of Illness Index},
