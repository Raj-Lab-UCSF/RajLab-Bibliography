journal = {Neurobiology of Disease},
keywords = {Dementia with Lewy bodies,Graph theory,Lewy pathology,Mouse connectome,Network diffusion models,Parkinson's disease,Prion-like propagation,$\alpha$-Synuclein},
month = {feb},
pages = {104623},
pmid = {31628991},
publisher = {Academic Press Inc.},
title = {{Neural connectivity predicts spreading of alpha-synuclein pathology in fibril-injected mouse models: Involvement of retrograde and anterograde axonal propagation}},
url = {https://linkinghub.elsevier.com/retrieve/pii/S0969996119302980},
volume = {134},
year = {2020}
}
@article{Mezias2022,
abstract = {The current state-of-the-art mappings of cell types fall short regarding finely resolved subtypes of neural cells, especially $\gamma$-aminobutyric acidergic and glutamatergic subtypes. Most such maps compromise on either the number or specificity of unique cell types quantified in each study. Others only use qualitative validation for their maps and fail to address whether gene subset selection is necessary for optimal maps. The Matrix Inversion and Subset Selection pipeline uses publicly available in situ hybridization and single-cell RNA sequencing gene expression data to infer cell-type distributions to map diverse cell types across the murine brain. Most importantly, we demonstrate that data-driven feature selection is necessary to arrive at quantitatively optimal cell-type maps using inversion-, deconvolution-, and correlation-based mapping approaches.},
