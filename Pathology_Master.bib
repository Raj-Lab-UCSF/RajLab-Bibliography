issn = {0001-6322},
journal = {Acta Neuropathologica},
month = {sep},
number = {3},
pages = {259--269},
pmid = {10965795},
title = {{Evolution of Alzheimer's disease-related cytoskeletal changes in the basal nucleus of Meynert}},
