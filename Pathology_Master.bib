pages = {2107--2115},
publisher = {Wolters Kluwer Health, Inc. on behalf of the American Academy of Neurology},
title = {{Basal ganglia involvement in amyotrophic lateral sclerosis}},
url = {https://www.neurology.org/lookup/doi/10.1212/01.wnl.0000437313.80913.2c},
