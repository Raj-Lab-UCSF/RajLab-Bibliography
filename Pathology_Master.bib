pages = {1635--1646},
pmid = {21490054},
title = {{Neuronal dysfunction and disconnection of cortical hubs in non-demented subjects with elevated amyloid burden}},
url = {https://academic.oup.com/brain/article-lookup/doi/10.1093/brain/awr066},
