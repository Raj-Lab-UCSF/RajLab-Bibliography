issn = {1662-5129},
journal = {Frontiers in Neuroanatomy},
keywords = {Cortical development,Mouse,Neuronal density,Numbers of neurons,Occipital cortex,Visual cortex},
title = {{Distribution of neurons in functional areas of the mouse cerebral cortex reveals quantitatively different cortical zones}},
url = {http://journal.frontiersin.org/article/10.3389/fnana.2013.00035/abstract},
