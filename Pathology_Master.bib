keywords = {AV-45-PET,Alzheimer's disease,FDG-PET,amyloid-$\beta$,biomarkers,cross-sectional,hypometabolism,metabolism,structural connectivity},
month = {dec},
number = {4},
pages = {1639--1657},
pmid = {27911289},
title = {{The Brain's Structural Connectome Mediates the Relationship between Regional Neuroimaging Biomarkers in Alzheimer's Disease}},
url = {https://www.medra.org/servlet/aliasResolver?alias=iospress&doi=10.3233/JAD-160090},
volume = {55},
