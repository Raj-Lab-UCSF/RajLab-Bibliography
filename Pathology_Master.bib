doi = {10.1371/journal.pone.0085443},
editor = {Sleegers, Kristel},
issn = {1932-6203},
journal = {PLoS ONE},
month = {dec},
number = {12},
pages = {e85443},
pmid = {24392009},
title = {{Effects of Baseline CSF $\alpha$-Synuclein on Regional Brain Atrophy Rates in Healthy Elders, Mild Cognitive Impairment and Alzheimer's Disease}},
url = {https://dx.plos.org/10.1371/journal.pone.0085443},
volume = {8},
