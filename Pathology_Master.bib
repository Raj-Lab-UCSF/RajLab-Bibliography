journal = {Alzheimer's & Dementia},
keywords = {alzheimer's disease,apoe 4,diffusion tensor imaging,family history,mri,white matter},
month = {sep},
number = {5},
pages = {394--403},
pmid = {20713315},
title = {{White matter is altered with parental family history of Alzheimer's disease}},
url = {https://onlinelibrary.wiley.com/doi/10.1016/j.jalz.2009.11.003},
