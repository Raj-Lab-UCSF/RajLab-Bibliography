doi = {10.1016/j.neuroimage.2015.10.057},
issn = {10538119},
journal = {NeuroImage},
keywords = {CoCoMac,Connectomics,Cortical thickness,Diffusion-weighted MRI,Hierarchical clustering,Resting state functional MRI,Structural covariance,Tract tracing,k-Means clustering},
month = {jan},
pages = {311--331},
pmid = {26515902},
title = {{A cross-modal, cross-species comparison of connectivity measures in the primate brain}},
url = {https://linkinghub.elsevier.com/retrieve/pii/S1053811915009696},
volume = {125},
year = {2016}
}
