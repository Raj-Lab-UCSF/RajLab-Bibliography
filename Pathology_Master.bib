journal = {Communications in Nonlinear Science and Numerical Simulation},
keywords = {Anomalous diffusion,Fractal derivative,Magnetic resonance imaging,Spectral entropy},
month = {oct},
pages = {529--537},
publisher = {Elsevier B.V.},
title = {{A fractal derivative model for the characterization of anomalous diffusion in magnetic resonance imaging}},
url = {https://linkinghub.elsevier.com/retrieve/pii/S1007570416301083},
volume = {39},
